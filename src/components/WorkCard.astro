---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'work'>;
}

const { project } = Astro.props;
const { title, cover, coverAlt, technicalChallenge, tags, stack } = project.data;
---

<a href={`/work/${project.slug}`} class="group block w-full outline-none">
  <article class="flex flex-col gap-6">
    <!-- Image Container with Reveal Effect -->
    <div class="relative w-full aspect-[4/3] md:aspect-[16/9] overflow-hidden bg-zinc-100 border border-zinc-200/50">
      <img 
        src={cover} 
        alt={coverAlt}
        class="w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-105 group-focus-visible:scale-105"
        loading="lazy"
      />
      <!-- Overlay for hover state -->
      <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    </div>

    <!-- Content -->
    <div class="flex flex-col gap-3">
      <div class="flex items-baseline justify-between">
        <h3 class="font-display text-2xl md:text-3xl font-semibold text-zinc-900 group-hover:text-zinc-600 transition-colors">
          {title}
        </h3>
        <!-- Optional: Year or Status -->
      </div>

      <p class="font-sans text-zinc-500 text-base md:text-lg leading-relaxed max-w-2xl">
        {technicalChallenge}
      </p>

      <!-- Tags -->
      <div class="flex flex-wrap gap-2 mt-2">
        {stack.frontend.slice(0, 3).map((tech) => (
          <span class="px-3 py-1 text-xs font-medium text-zinc-600 bg-zinc-100 border border-zinc-200 rounded-full">
            {tech}
          </span>
        ))}
      </div>
    </div>
  </article>
</a>

